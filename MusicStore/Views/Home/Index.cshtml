@model IEnumerable<MusicStore.Models.Album>

@{
    ViewData["Title"] = "Home Page";
}

@using MusicStore.Helpers

<br />

<div class="jumbotron" style="background-color:lightblue">
    <div class="container">
        <div class="row well well-lg">
            <div class="col-md-6 col-md-offset-3 centerfy">
                <div class="">
                    <img src="~/images/logo.png" class="img-responsive text-center" />
                </div>
            </div>
        </div>
    </div>
</div>

<ul class="row list-unstyled" id="album-list">
    @foreach (var album in Model)
    {
        <li class="col-lg-2 col-md-2 col-sm-2 col-xs-4 container">
            <a asp-controller="Store" asp-action="Details" asp-route-id="@album.AlbumID">
                <img alt="@album.Title" src="~/content/@album.AlbumArtUrl" width="100" />
                <br />&nbsp;<br />
                <div id="title">
                    @MyHelper.Truncate(album.Title, 20)
                </div>
            </a>
        </li>
    }
</ul>