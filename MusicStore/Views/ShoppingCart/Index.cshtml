@model IEnumerable<CartItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Album)
            </th>
            <th>
                Price (each)
            </th>
            <th>
                Quantity
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Store" asp-action="Details" asp-route-id="@item.AlbumID">
                        @Html.DisplayFor(modelItem => item.Album.Title)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Album.Price) euro
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @(item.Album.Price * item.Count) euro
                </td>
                <td>
                    <a asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-id="@item.CartItemID">Remove from cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Checkout" asp-action="Create">Checkout</a>
<a asp-controller="Home" asp-action="Index">Back to home</a>